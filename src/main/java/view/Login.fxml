<AnchorPane fx:id="apMother" prefHeight="620.0" prefWidth="989.0" stylesheets="@style/MainStyle.css"
            xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.exuberant.ims.controller.LoginController">
    <HBox alignment="CENTER" prefHeight="535.0" prefWidth="760.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="CENTER" prefHeight="620.0" prefWidth="726.0">
            <AnchorPane fx:id="apDesignPane" prefHeight="384.0" prefWidth="668.0">
                <Label layoutX="14.0" layoutY="18.0" text="Store Keeper" textFill="#ddcdcc">
                    <font>
                        <Font name="System Bold" size="31.0"/>
                    </font>
                    <effect>
                        <Reflection bottomOpacity="0.04" fraction="0.6" topOpacity="0.32"/>
                    </effect>
                </Label>
                <AnchorPane layoutX="381.0" layoutY="52.0" prefHeight="280.0" prefWidth="290.0"
                            style="-fx-background-color: white;">
                        <Hyperlink fx:id="hlCrateAccount" layoutX="88.0" layoutY="256.0"
                                   onAction="#hlCreateAnAccount" text="Create an account">
                            <font>
                                <Font size="11.0"/>
                            </font>
                        </Hyperlink>
                        <Label layoutX="80.0" layoutY="14.0" text="SIGN IN">
                            <font>
                                <Font name="DejaVu Sans Bold" size="29.0"/>
                            </font>
                        </Label>
                        <GridPane layoutX="5.0" layoutY="83.0" prefHeight="97.0" prefWidth="281.0"
                                  vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>

                                <TextField fx:id="tfUserName" onAction="#pfUserPassOnHitEnter"
                                           promptText="User Name" text="rakeshgirase"
                                           GridPane.columnSpan="2"/>
                                <PasswordField fx:id="pfUserPassword" onAction="#pfUserNameOnHitEnter"
                                               promptText="Password" text="Pass" GridPane.columnSpan="2"
                                               GridPane.rowIndex="1"/>
                                <Button fx:id="btnUserNameTfClear" mnemonicParsing="false" prefHeight="31.0"
                                        prefWidth="29.0" stylesheets="@style/btnOnText.css"
                                        GridPane.columnSpan="2" GridPane.halignment="RIGHT"/>
                                <Button fx:id="btnPassFieldClear" mnemonicParsing="false" prefHeight="31.0"
                                        prefWidth="29.0" stylesheets="@style/btnOnText.css"
                                        GridPane.columnSpan="2" GridPane.halignment="RIGHT"
                                        GridPane.rowIndex="1"/>

                        </GridPane>
                        <Button fx:id="btnLogin" layoutX="96.0" layoutY="203.0" mnemonicParsing="false"
                                onAction="#btnLogin" text="Log In"/>

                </AnchorPane>
                <Text fill="WHITE" layoutX="14.0" layoutY="122.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Thanks for choosing “storekeeper” . This is an Open source product for you"
                      wrappingWidth="319.99999513477087">
                    <font>
                        <Font name="System Italic" size="16.0"/>
                    </font>
                </Text>
                <Text fill="#f5efef" layoutX="14.0" layoutY="168.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="You can share your comment / Requirement / Bug report with me."
                      wrappingWidth="319.9999902378768">
                    <font>
                        <Font name="System Italic" size="16.0"/>
                    </font>
                </Text>
                <Label layoutX="14.0" layoutY="220.0" text="Mail Me:  girase.rakesh@gmail.com"
                       textFill="#e8d9d9"/>
                <Hyperlink id="hl-database" fx:id="hlDatabase" layoutX="490.0" layoutY="346.0"
                           onAction="#hlDbOnAction" text="DB SETUP"/>
            </AnchorPane>
        </VBox>
    </HBox>
</AnchorPane>
