<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:derby://localhost:1527/ClientDb</property>
        <property name="connection.username">users</property>
        <property name="connection.password">Password</property>
        <property name="connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
        <property name="dialect">org.hibernate.dialect.DerbyTenSevenDialect</property>

        <property name="show_sql">true</property>

        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">create</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>
        <property name="current_session_context_class">thread</property>

        <mapping class="com.exuberant.ims.dal.Users"/>
        <mapping class="com.exuberant.ims.dal.Product"/>
        <mapping class="com.exuberant.ims.dal.Weight"/>
        <mapping class="com.exuberant.ims.dal.ProductId"/>
    </session-factory>
</hibernate-configuration>